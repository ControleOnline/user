        <div class="form-group">
            <label class="col-md-4 control-label" for="phone"><?= $this->translate('Phone') ?></label>  
            <div class="col-md-4">
                <input id="contact" name="phone" type="text" placeholder="<?= $this->translate('Enter your phone') ?>" class="form-control input-md" required>
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="change"></label>
            <div class="col-md-4">
                <button id="change" name="change" class="btn btn-success"><?= $this->translate('Change') ?></button>
            </div>
        </div>    
    </fieldset>
</form>
